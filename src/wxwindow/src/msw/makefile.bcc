clean_gauge:
    cd $(WXDIR)\contrib\gauge
    make -f makefile.bcc clean
    cd $(WXDIR)\src\msw

xpm:
    cd $(WXDIR)\contrib\wxxpm
    make -f makefile.bcc DEBUG=$(DEBUG) 
