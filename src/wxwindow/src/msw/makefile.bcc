clean_rcp:
    cd $(WXDIR)\utils\rcparser\src
    make -f makefile.bcc clean
    cd $(WXDIR)\src\msw

clean: $(PERIPH_CLEAN_TARGET)
    erase $(LIBTARGET)
    cd $(WXDIR)\src\base
    erase *.obj
    cd $(WXDIR)\src\msw
    erase *.obj

cleanall: clean
