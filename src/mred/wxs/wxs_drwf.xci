
@MACRO ZeroReturn[p] = if (x<p> <= 0) return scheme_void;
@MACRO ZeroBoundary[p] = if (x<p> < 0) x<p> = 0;

@MACRO CheckRgn[p] = if (x<p> && (x<p>->GetDC() != ((wxDC *)((Scheme_Class_Object *)THEOBJ)->primdata))) WITH_VAR_STACK(scheme_arg_mismatch(METHODNAME("dc<%>","set-clipping-region"), "provided a different dc's region: ", p[POFFSET+<p>]));

@ Q "clear" : void Clear(); : : /CheckOk[METHODNAME("dc<%>","clear")]

@ Q "draw-line" : void DrawLine(float,float,float,float); : : /CheckOk[METHODNAME("dc<%>","draw-line")]
@ Q "draw-point" : void DrawPoint(float,float); : : /CheckOk[METHODNAME("dc<%>","draw-point")]
@ Q "draw-rectangle" : void DrawRectangle(float,float,nnfloat,nnfloat); : : /ZeroReturn[2]|ZeroReturn[3]|CheckOk[METHODNAME("dc<%>","draw-rectangle")]
@ Q "draw-rounded-rectangle" : void DrawRoundedRectangle(float,float,nnfloat,nnfloat,float=20); : : /ZeroReturn[2]|ZeroReturn[3]|CheckOk[METHODNAME("dc<%>","draw-rounded-rectangle")]
@ q "draw-spline" : void DrawSpline(float,float,float,float,float,float); : : /CheckOk[METHODNAME("dc<%>","draw-spline")]
@ Q "draw-text" : void DrawText(string,float,float,bool=FALSE,nnint=0,float=0.0); : : /CheckStringIndex["draw-text".0.4]|CheckOk[METHODNAME("dc<%>","draw-text")]

@ Q "draw-arc" : void DrawArc(float,float,nnfloat,nnfloat,float,float); : : /CheckOk[METHODNAME("dc<%>","draw-arc")]
@ Q "draw-ellipse" : void DrawEllipse(float,float,nnfloat,nnfloat); : : /ZeroReturn[2]|ZeroReturn[3]|CheckOk[METHODNAME("dc<%>","draw-ellipse")]

@ Q "draw-lines" : void DrawLines(-int,wxPoint!/bList/ubList/cList,float=0,float=0); : /methListSet[wxPoint.0.1.0]// : / glueListSet[wxPoint.0.1.0.METHODNAME("dc<%>","draw-lines")]|CheckOk[METHODNAME("dc<%>","draw-lines")]//
@ Q "draw-polygon" : void DrawPolygon(-int,wxPoint!/bList/ubList/cList,float=0,float=0,SYM[fillKind]=wxODDEVEN_RULE); : / methListSet[wxPoint.0.1.0]// : /glueListSet[wxPoint.0.1.0.METHODNAME("dc<%>","draw-polygon")]|CheckOk[METHODNAME("dc<%>","draw-polygon")]//

@ Q "set-clipping-rect" : void SetClippingRect(float,float,nnfloat,nnfloat); : : /ZeroBoundary[2]|ZeroBoundary[3]|CheckOk[METHODNAME("dc<%>","set-clipping-rec")]
@ Q "set-clipping-region" : void SetClippingRegion(wxRegion^) : : /CheckRgn[0]|/CheckOk[METHODNAME("dc<%>","set-clipping-region")]
@ Q "get-clipping-region" : wxRegion^ GetClippingRegion() : : /CheckOk[METHODNAME("dc<%>","set-clipping-region")]

