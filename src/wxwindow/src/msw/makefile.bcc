# Peripheral components

fafa:
    cd $(WXDIR)\contrib\fafa
    make -f makefile.bcc DEBUG=$(DEBUG) 
    cd $(WXDIR)\src\msw

clean_fafa:
    cd $(WXDIR)\contrib\fafa
    make -f makefile.bcc clean
    cd $(WXDIR)\src\msw

itsy:
    cd $(WXDIR)\contrib\itsybits
    make -f makefile.bcc DEBUG=$(DEBUG) 
