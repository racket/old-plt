@ Q "set-font" : void SetFont(wxFont!); : : /CheckOk[METHODNAME("dc<%>","set-font")]
@ Q "set-pen" : void SetPen(wxPen!); : : /CheckOk[METHODNAME("dc<%>","set-pen")]
