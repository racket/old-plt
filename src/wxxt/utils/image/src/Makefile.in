# Makefile for image example (UNIX).

srcdir = @srcdir@

PLTSRCDIR = $(srcdir)/../../../..

###########################
#      Common Macros      #
###########################
CC = @CC@
CXX = @CXX@
LINKER = $(CXX)
PERL = @PERL@
RANLIB = @RANLIB@
AR = @AR@
ARFLAGS = @ARFLAGS@
OPTIONS = @OPTIONS@ @MROPTIONS@
COMPFLAGS = @CFLAGS@
XINCLUDE = @X_CFLAGS@
XLIB = @X_LIBS@
LDLIBS = @X_PRE_LIBS@ -lXaw -lXmu -lXt -lX11 -lXext @X_EXTRA_LIBS@ @LIBS@
GCDIRECTORY = @GCDIR@
WBUILD = @WBUILD@

WXINC = $(PLTSRCDIR)/wxxt/src/AIAI-include -I$(PLTSRCDIR)/wxxt/src
NOGCINC = -I$(WXINC) -I$(PLTSRCDIR)/mred/wxme/ -I$(PLTSRCDIR)/mzscheme/include/
INC = -I$(PLTSRCDIR)/mzscheme/$(GCDIRECTORY) $(NOGCINC)
CXXFLAGS = $(XINCLUDE) $(INC) $(OPTIONS) -Dwx_xt $(COMPFLAGS)
CPPFLAGS = $(CXXFLAGS)
CFLAGS = $(XINCLUDE) $(INC) $(OPTIONS) -Dwx_xt $(COMPFLAGS)
LDFLAGS = $(XLIB)
###########################

IMAGELIB = libimage_xt.a
OBJECTS = wx_image.o wx_img.o wx_gif.o wx_gifwr.o \
          wx_gam.o wx_pbm.o wx_24to8.o wx_pm.o \
          wx_xbm.o wx_bmp.o wx_pcx.o

GLOBALDEPS = $(srcdir)/../../../src/DataStructures/Object.h $(srcdir)/../../../../wxcommon/wxGC.h

ICPPFLAGS = $(CPPFLAGS) -I$(srcdir)

all:	$(IMAGELIB)

$(IMAGELIB): $(OBJECTS)	
	rm -f $@
	$(AR) $(ARFLAGS) $@ $(OBJECTS)
	$(RANLIB) $@

wx_image.o:	$(srcdir)/wx_image.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_image.cc


wx_img.o:	$(srcdir)/wx_img.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_img.cc

wx_gif.o:	$(srcdir)/wx_gif.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_gif.cc

wx_gifwr.o:	$(srcdir)/wx_gifwr.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_gifwr.cc

wx_gam.o:	$(srcdir)/wx_gam.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_gam.cc

wx_pbm.o:	$(srcdir)/wx_pbm.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_pbm.cc

wx_bmp.o:	$(srcdir)/wx_bmp.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_bmp.cc

wx_pcx.o:	$(srcdir)/wx_pcx.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_pcx.cc

wx_xbm.o:	$(srcdir)/wx_xbm.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_xbm.cc

wx_pm.o:	$(srcdir)/wx_pm.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_pm.cc

wx_24to8.o:	$(srcdir)/wx_24to8.cc $(srcdir)/wx_image.h $(srcdir)/wx_imgx.h $(GLOBALDEPS)
	$(CXX) -c $(ICPPFLAGS) -o $@ $(srcdir)/wx_24to8.cc

cleaneach:
	rm -f $(OBJECTS) $(IMAGELIB) core
