
# Builds MzScheme and MrEd

all: mz @MAKE_MRED@

3m: mz3m @MAKE_MRED3M@

install: mzinstall @MAKE_MREDINSTALL@

clean:
	cd mzscheme; $(MAKE) clean
	if [ -d mred ] ; then cd mred; $(MAKE) clean; fi

mz:
	cd mzscheme; $(MAKE)

mz3m:
	cd mzscheme; $(MAKE) 3m

mr:
	cd mred; $(MAKE)

mr3m:
	cd mred; $(MAKE) 3m

mzinstall:
	cd mzscheme; $(MAKE) install

mrinstall:
	cd mred; $(MAKE) install
