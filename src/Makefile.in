
# Builds MzScheme and MrEd

all:
	$(MAKE) mz
	$(MAKE) mred-stub

mred-stub: @MAKE_MRED@


3m:
	$(MAKE) mz3m
	$(MAKE) mred3m-stub

mred3m-stub: @MAKE_MRED3M@


install:
	$(MAKE) install-normal
	$(MAKE) finish-stub

install-normal:
	$(MAKE) copytree-stub
	$(MAKE) mzinstall
	$(MAKE) mredinstall-stub
	$(MAKE) lib-finish

copytree-stub: @MAKE_COPYTREE@

mredinstall-stub: @MAKE_MREDINSTALL@

finish-stub: @MAKE_FINISH@


install-3m:
	$(MAKE) install-normal
	$(MAKE) mzinstall3m
	$(MAKE) mredinstall3m-stub
	$(MAKE) finish-stub

mredinstall3m-stub: @MAKE_MREDINSTALL3M@ 


clean:
	cd mzscheme; $(MAKE) clean
	if [ -d mred ] ; then cd mred; $(MAKE) clean; fi


mz:
	cd mzscheme; $(MAKE)

mz3m:
	cd mzscheme; $(MAKE) 3m

mr:
	cd mred; $(MAKE)

mr3m:
	cd mred; $(MAKE) 3m


mzinstall:
	cd mzscheme; $(MAKE) install

mzinstall3m:
	cd mzscheme; $(MAKE) install-3m

mrinstall:
	cd mred; $(MAKE) install

mrinstall3m:
	cd mred; $(MAKE) install-3m


lib-finish:
	@LIBFINISH@ @prefix@/lib

srcdir = @srcdir@
prefix = @prefix@

copy-finish:
	if [ @MZINSTALLTARGET@ = "normal-install" ] ; then cd $(prefix); ./install ; fi

inplace-finish:
	if [ ! -d $(srcdir)/CVS ] ; then cd $(prefix); ./install ; fi
	if [ -d $(srcdir)/CVS ] ; then cat $(srcdir)/mzscheme/imsg.txt ; fi

copytree:
	if [ ! -d $(prefix) ] ; then mkdir $(prefix) ; fi
	cp -p -r $(srcdir)/../collects $(prefix)/.
	if [ @MZINSTALLTARGET@ = "normal-install" ] ; then cp -p -r $(srcdir)/../bin $(prefix)/. ; fi
	cp -p -r $(srcdir)/../include $(prefix)/.
	cp -p -r $(srcdir)/../notes $(prefix)/.
	cp -p -r $(srcdir)/../man $(prefix)/.
	if [ -d $(srcdir)/../teachpack ] ; then  cp -r $(srcdir)/../teachpack $(prefix)/teachpack ; fi
	if [ @MZINSTALLTARGET@ = "normal-install" ] ; then cp -p $(srcdir)/../install $(prefix)/install ; fi
